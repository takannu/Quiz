<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.co.atschool.quiz.QuizResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:text="あなたのオススメ言語は・・・" />

        <ImageView
            android:id="@+id/ivPrograms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/swift" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="18dp"
            android:text="あなたは堅実です。変化を求めずそのままでいてほしいですが、しっかりものなので責任を持って仕事を行うことでしょう。" />

        <Button
            android:id="@+id/bBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_design"
            android:text="もう一回診断する"
            android:textColor="@color/color_bottom"
            android:textSize="40px"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="341dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
